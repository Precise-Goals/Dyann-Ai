rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Dashboard data - users can only access their own
    match /dashboard/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reviews - anyone can read, only author can write
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Assistant conversations - users can only access their own
    match /assistant/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // AI suggestions - users can only access their own
    match /ai_suggestions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analytics data - read-only for authenticated users
    match /analytics/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // No writes to analytics
    }
  }
}
